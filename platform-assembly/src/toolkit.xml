<?xml version="1.0" encoding="ISO-8859-1"?>
<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    
    <id>toolkit</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>mct-toolkit-${project.version}</baseDirectory>
    <dependencySets>
    	<dependencySet>
    		<useProjectArtifact>false</useProjectArtifact>
    		<includes>
    			<include>gov.nasa.arc.mct.toolkit:mct-toolkit</include>
    		</includes>
    		<excludes>
    			<exclude>gov.nasa.arc.mct.toolkit:mct-toolkit:jar:apidocs</exclude>
    		</excludes>
    		<unpack>true</unpack>
   			<unpackOptions>
   				<excludes>
   					<exclude>META-INF/</exclude>
   				</excludes>
   			</unpackOptions>
    	</dependencySet>
    	<dependencySet>
    		<useProjectArtifact>false</useProjectArtifact>
    		<outputDirectory>projects</outputDirectory>
    		<includes>
    			<include>gov.nasa.arc.mct.toolkit:mct-launch:jar:eclipse</include>
    			<include>gov.nasa.arc.mct.toolkit:plugin-template:jar:eclipse</include>
    			<include>org.acme.example:exampleplugin:jar:eclipse</include>
    		</includes>
    		<unpack>true</unpack>
    		<unpackOptions>
    			<excludes>
    				<exclude>META-INF/</exclude>
    			</excludes>
    		</unpackOptions>
    	</dependencySet>
    	<dependencySet>
    		<useProjectArtifact>false</useProjectArtifact>
    		<outputDirectory>projects/mct-launch/launch</outputDirectory>
    		<outputFileNameMapping>${project.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
    		<includes>
    			<include>mct:mct-superpom:jar:sources</include>
    		</includes>
    		<unpack>false</unpack>
    	</dependencySet>
    	<dependencySet>
    		<useProjectArtifact>false</useProjectArtifact>
    		<outputDirectory>projects/mct-launch/launch</outputDirectory>
    		<includes>
    			<include>gov.nasa.arc.mct.toolkit:mct-toolkit:jar:apidocs</include>
    		</includes>
    		<unpack>false</unpack>
    	</dependencySet>
    </dependencySets>
    <fileSets>
    	<fileSet>
    		<directory>${project.build.directory}/published-api/apidocs</directory>
    		<outputDirectory>doc/api</outputDirectory>
    		<includes />
    	</fileSet>
    	<fileSet>
    		<directory>${project.build.directory}</directory>
    		<outputDirectory>projects/mct-launch/launch</outputDirectory>
    		<includes>
    			<include>${project.artifactId}-${project.version}-apidocs.zip</include>
    			<include>version.properties</include>
    		</includes>
    	</fileSet>
    </fileSets>
</assembly>
